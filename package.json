{
  "name": "gtm-toolkit",
  "version": "0.1.0",
  "description": "Continuous Marketing Automation Toolkit - SEO, GEO, and Analytics setup with Claude Code integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "gtm-toolkit": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "seo:lint": "node dist/cli.js lint",
    "seo:lint:changed": "node dist/cli.js lint --changed",
    "generate:robots": "node dist/cli.js generate --robots",
    "generate:sitemap": "node dist/cli.js generate --sitemap",
    "analyze:competitor": "node dist/cli.js analyze --competitor",
    "keywords:research": "node dist/cli.js keywords --research"
  },
  "keywords": [
    "seo",
    "geo",
    "generative-engine-optimization",
    "marketing-automation",
    "gtm-as-code",
    "continuous-marketing",
    "claude-code",
    "analytics",
    "sitemap",
    "robots"
  ],
  "author": "Raz Kaplan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/razkaplan/gtm-toolkit.git"
  },
  "homepage": "https://github.com/razkaplan/gtm-toolkit#readme",
  "bugs": {
    "url": "https://github.com/razkaplan/gtm-toolkit/issues"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "inquirer": "^8.2.6",
    "fs-extra": "^11.1.1",
    "chalk": "^4.1.2",
    "ora": "^5.4.1",
    "gray-matter": "^4.0.3",
    "glob": "^10.3.10",
    "jsdom": "^22.1.0",
    "axios": "^1.5.1",
    "googleapis": "^128.0.0",
    "google-auth-library": "^9.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/inquirer": "^9.0.3",
    "@types/fs-extra": "^11.0.2",
    "@types/jsdom": "^21.1.3",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "files": [
    "dist/",
    "templates/",
    "README.md",
    "API.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}